class Solution {
  public:
    int maxSubarraySum(vector<int>& arr, int k) {
        // code here
        int maxSum = 0;
        int currentSum = 0;
        int left = 0;
        for(int i=0;i<k;i++){
            currentSum += arr[i]; // Adding elements up till k initially
        }
        maxSum = currentSum;
        for(int i=k;i<arr.size();i++){
            currentSum += arr[i];
            currentSum -= arr[left]; // Moving the k sized window forward by adding current element and subtracting element at index left
            left++;
            maxSum = max(maxSum,currentSum);
        }
        return maxSum;
    }
};
