class Solution {
  public:
    int binaryToDecimal(string &b) {
        // Code here.
        //iterative
        int sum = 0;
        int n = b.size();
        for(int i=0;i<n;i++){
            if(b[i] == '1'){
                sum += pow(2,n - i - 1); // Taking the indexes which have base 1 and raising their power on 2 to the power n - i - 1 
            }
        }
        return sum;
    }
};
