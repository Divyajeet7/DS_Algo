class Solution {
  public:
    int helper(string &b, int i){
        int n = b.size();
        if(i > n-1)return 0;
        int res = helper(b,i+1); // sending i+1 to the recursive function so as to traverse forward
        return res + (b[i]=='1' ? pow(2,n-i-1) : 0); // Traversing to the last index, rasing pow(2,n - i - 1), adding it to res and return the value 
    }
    int binaryToDecimal(string &b) {
        // Code here.
        //recursive soln
        int i=0;
        int res = helper(b,i);
        return res;
    }
};
