string helper(string &s,int i){
    if(i>s.size()-1)return ""; // If crossed the last index return empty string
    string res = helper(s,i+1); // i+1 so as to traverse forward in the string
    return res+s[i]; // adding the current char to res and returning it
}
string reverseString(string &s) {
    // code here
    int i = 0;
    string ans = helper(s,i);
    return ans;
}
